- encodedURL = "ittyurl.herokuapp.com/tiny/" + newURL
html
  head
    include includes/head.pug
    
  body
    .container
        h3#register_error= error
        form.form-horizontal(_lpchecked='1', action='/getURL', method='POST')
        fieldset
            legend ittyurl - an obvious tinyurl clone:
        .container
            h5= "Here is your shortened URL:"
            h4= encodedURL
            h4
              a(href="http://"+ encodedURL) Link

            p
              a(href="/") Back to Home.  

